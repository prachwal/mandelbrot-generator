{
  "name": "@prachwal/mandelbrot-generator",
  "version": "1.0.0",
  "description": "Professional Mandelbrot fractal generator with TypeScript support, interactive web interface, and multiple output formats",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*",
    "web/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:web": "npm run build && vite build",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run build && vite",
    "dev:watch": "concurrently \"npm run build:watch\" \"vite\"",
    "serve": "npm run build && vite",
    "serve:preview": "npm run build:web && vite preview",
    "clean": "rm -rf dist dist-web coverage",
    "examples": "npm run build && node examples.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "c8 jest",
    "test:coverage-report": "c8 --reporter=html --reporter=text jest",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepare": "npm run build",
    "postpack": "npm run clean"
  },
  "keywords": [
    "mandelbrot",
    "fractal",
    "generator",
    "visualization",
    "mathematics",
    "complex-numbers",
    "typescript",
    "canvas",
    "svg",
    "interactive"
  ],
  "author": {
    "name": "prachwal",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prachwal/mandelbrot-generator.git"
  },
  "bugs": {
    "url": "https://github.com/prachwal/mandelbrot-generator/issues"
  },
  "homepage": "https://github.com/prachwal/mandelbrot-generator#readme",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@vitejs/plugin-legacy": "^7.0.0",
    "c8": "^8.0.1",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^7.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
